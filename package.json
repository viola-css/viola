		"@commitlint/config-lerna-scopes": "^8.0.0",
		"babel-eslint": "^10.0.2",
		"babel-jest": "^24.8.0",
		"babel-plugin-add-header-comment": "^1.0.3",
		"codecov": "^3.5.0",
		"commitizen": "^3.1.1",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^6.0.1",
		"husky": "^3.0.0",
		"jest": "^24.8.0",
		"lerna": "^3.15.0",
		"lerna-changelog": "^0.8.2"
	},
	"engines": {
		"node": ">= 8",
		"yarn": ">= 1.16"
	},
	"husky": {
